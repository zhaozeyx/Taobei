<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="17dp"
    android:paddingRight="9dp"
    android:paddingTop="12dp"
    >
  <TextView
      android:id="@+id/date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      tools:text="2016年2月"
      style="@style/Widget.App.TextView.Large.Primary"
      />
  <TextView
      android:id="@+id/total_profit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      tools:text="￥100.00"
      style="@style/Widget.App.TextView.Large.RedDark"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@id/total_profit"
      android:text="@string/activity_profit_records_item_group_label_earn"
      style="@style/Widget.App.TextView.Large.Primary"
      />
</RelativeLayout>