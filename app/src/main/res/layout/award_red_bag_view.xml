<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/award_not_get"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="17dp"
      android:background="@mipmap/bg_profit_real_not_get"
      android:gravity="bottom|center_horizontal"
      android:paddingBottom="12dp"
      android:text="@string/adv_detail_status_profit_real_un_get"
      android:visibility="gone"
      tools:visibility="visible"
      style="@style/Widget.App.TextView.Medium.White"
      />

  <TextView
      android:id="@+id/award_get"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="17dp"
      android:background="@mipmap/bg_profit_real_get"
      android:gravity="bottom|center_horizontal"
      android:paddingBottom="12dp"
      android:text="@string/adv_detail_status_profit_real_get"
      android:visibility="gone"
      tools:visibility="visible"
      style="@style/Widget.App.TextView.Medium.Primary"
      />

  <FrameLayout
      android:id="@+id/award_get_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_medium"
      android:background="@drawable/bg_adv_detail_profit_info"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:visibility="gone"
      tools:visibility="visible"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_red_dotted"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/congratulations_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingBottom="15dp"
          android:paddingTop="15dp"
          style="@style/Widget.App.TextView.Large.Primary"
          />
      <View
          android:id="@+id/divider"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@id/congratulations_info"
          android:background="@drawable/dotted_line_red"
          />

      <RelativeLayout
          android:id="@+id/label_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/divider"
          android:gravity="center"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/adv_detail_profit_info_label_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginRight="3.5dp"
            android:layout_marginTop="15dp"
            android:text="@string/adv_detail_profit_info_label_wallet"
            style="@style/Widget.App.TextView.Medium.RedDark"
            />

        <View
            android:layout_width="12dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/adv_detail_profit_info_label_wallet"
            android:background="@color/font_color_red_dark"
            />

        <View
            android:layout_width="12dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/adv_detail_profit_info_label_wallet"
            android:background="@color/font_color_red_dark"
            />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/label_container"
          android:gravity="center"
          android:orientation="horizontal"
          android:paddingBottom="12dp"
          android:paddingTop="12dp"
          >
        <TextView
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_yellow_gray_round_corner"
            android:drawableLeft="@mipmap/icon_adv_detail_profit_info_btn_wallet"
            android:drawablePadding="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="17.5dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="@string/adv_detail_profit_info_btn_wallet"
            android:textColor="@color/btn_black_white_selector"
            android:visibility="gone"
            tools:text="buttonLeft"
            tools:visibility="visible"
            style="@style/Widget.App.TextView.Medium"
            />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/btn_left"
            android:background="@drawable/bg_btn_yellow_round_corner"
            android:drawableLeft="@mipmap/icon_adv_detail_profit_info_btn_withdraw"
            android:drawablePadding="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="17.5dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="@string/adv_detail_profit_info_btn_question_virtual_money"
            android:textColor="@color/font_color_primary"
            android:visibility="gone"
            tools:text="buttonRight"
            tools:visibility="visible"
            style="@style/Widget.App.TextView.Medium"
            />

      </RelativeLayout>

    </RelativeLayout>
  </FrameLayout>

</LinearLayout>