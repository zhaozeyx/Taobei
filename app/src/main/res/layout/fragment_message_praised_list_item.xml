<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    >
  <ImageView
      android:id="@+id/btn_choose"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:background="@mipmap/bg_message_delete_choice"
      android:scaleType="centerInside"
      android:visibility="gone"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/avatar"
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:layout_centerVertical="true"
          tools:src="@mipmap/src_avatar_default_drawer"
          />

      <TextView
          android:id="@+id/user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="12dp"
          android:layout_toRightOf="@id/avatar"
          android:textColor="#ae841d"
          tools:text="火星网友"
          style="@style/Widget.App.TextView.Medium"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="8dp"
          android:layout_toRightOf="@id/user_name"
          android:text="@string/activity_message_list_praise_info"
          style="@style/Widget.App.TextView.Medium.Primary"
          />

      <TextView
          android:id="@+id/date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          tools:text="2016-06-20"
          style="@style/Widget.App.TextView.Small.Secondary"
          />

    </RelativeLayout>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18.5dp"
        android:layout_marginTop="6dp"
        android:background="@color/app_bg_color"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:padding="8dp"
        tools:text="看广告赚钱，恭喜你，今天赚得10元，赶紧登陆或注册成为会员，能提现，要不要试一下"
        style="@style/Widget.App.TextView.Medium.Secondary"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/bg_color_divider"
        />

  </LinearLayout>
</LinearLayout>