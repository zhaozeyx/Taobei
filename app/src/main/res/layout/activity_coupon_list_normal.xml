<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="144dp"
      android:background="@drawable/bg_coupon_list_item_selected"
      android:paddingBottom="8dp"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:paddingTop="15dp"
      >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="30dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="1dp"
        tools:src="@mipmap/src_avatar_default_drawer"
        />
    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo"
        tools:text="傻逼提供"
        style="@style/Widget.App.TextView.Large.Primary"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="已共享"
        style="@style/Widget.App.TextView.Large.Primary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_toRightOf="@id/logo"
        android:gravity="bottom"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/activity_coupon_list_item_label_coupon"
          android:textColor="@color/font_color_brown"
          android:textSize="20sp"
          android:textStyle="italic"
          />
      <TextView
          android:id="@+id/coupon_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/activity_coupon_list_item_label_coupon"
          android:textColor="@color/font_color_brown"
          android:textSize="35sp"
          android:textStyle="italic|bold"
          tools:text="10元"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/share_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_yellow_round_corner"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingTop="4dp"
        tools:text="花自飘零水自流"
        style="@style/Widget.App.TextView.Large.Primary"
        />

    <TextView
        android:id="@+id/validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="@string/activity_coupon_list_item_validity"
        tools:text="@string/activity_coupon_list_item_validity"
        style="@style/Widget.App.TextView.Large.Primary"
        />

  </RelativeLayout>
</android.support.v7.widget.CardView>