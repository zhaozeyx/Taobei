<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="29dp"
    android:paddingRight="29dp"
    android:paddingTop="39dp"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="6dp"
      android:paddingRight="6dp"
      >
    <TextView
        android:id="@+id/country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="+86"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_btn_clear"
        />
    <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_clear"
        android:layout_toRightOf="@id/country_code"
        android:background="@null"
        android:inputType="phone"
        android:maxLength="@integer/max_phone_length"
        android:paddingBottom="13dp"
        android:paddingLeft="29dp"
        android:paddingTop="13dp"
        android:singleLine="true"
        android:textColorHint="@color/font_color_hint"
        tools:text="1888888888"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phone_input"
        android:background="@mipmap/bg_input"
        />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:paddingLeft="6dp"
      android:paddingRight="6dp"
      >
    <TextView
        android:id="@+id/verify_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/register_verify_code_label"
        style="@style/Widget.App.TextView.Medium.Primary"
        />

    <RelativeLayout
        android:id="@+id/count_down_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
      <TextView
          android:id="@+id/count_down_default"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_btn_yellow"
          android:gravity="center"
          android:minHeight="30dp"
          android:minWidth="63dp"
          android:singleLine="true"
          android:text="@string/btn_get_verify_code_count_down_default"
          style="@style/Widget.App.TextView.Medium.Primary"
          />

      <cn.iwgang.countdownview.CountdownView
          android:id="@+id/count_down_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@id/count_down_default"
          android:layout_alignLeft="@id/count_down_default"
          android:layout_alignRight="@id/count_down_default"
          android:layout_alignTop="@id/count_down_default"
          android:background="@drawable/bg_btn_yellow"
          app:isHideTimeBackground="true"
          app:isShowDay="false"
          app:isShowHour="false"
          app:isShowMillisecond="false"
          app:isShowMinute="false"
          app:isShowSecond="true"
          app:suffixGravity="center"
          app:timeTextColor="@color/font_color_primary"
          />
    </RelativeLayout>
    <EditText
        android:id="@+id/verify_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/count_down_container"
        android:layout_toRightOf="@id/verify_code_label"
        android:background="@null"
        android:inputType="number"
        android:maxLength="@integer/max_verify_code_length"
        android:paddingBottom="13dp"
        android:paddingLeft="13dp"
        android:paddingTop="13dp"
        android:singleLine="true"
        android:textColorHint="@color/font_color_hint"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/verify_code_input"
        android:background="@mipmap/bg_input"
        />
  </RelativeLayout>

  <Button
      android:id="@+id/btn_register"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:background="@drawable/bg_btn_yellow_gray"
      android:text="@string/register_btn"
      android:textColor="@color/btn_yellow_gray_selector"
      android:enabled="false"
      style="@style/Widget.App.TextView.Large.Primary"
      />

  <TextView
      android:id="@+id/licence"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="@string/register_licence_info"
      style="@style/Widget.App.TextView.Medium.Secondary"
      />

</LinearLayout>