<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="28dp"
    android:layout_marginTop="6dp"
    >
  <TextView
      android:id="@+id/rank_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:background="@mipmap/bg_rank_number_dark"
      android:gravity="center"
      android:textColor="@color/report_rank_color_primary"
      tools:text="1"
      style="@style/Widget.App.TextView.Medium"
      />
  <RelativeLayout
      android:id="@+id/rank_content_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="14.75dp"
      android:background="@drawable/bg_rank_content_dark"
      android:paddingBottom="7dp"
      android:paddingRight="14dp"
      android:paddingTop="7dp"
      >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        app:civ_border_color="@color/report_rank_color_primary"
        app:civ_border_width="1dp"
        tools:src="@mipmap/icon_baifumei"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@id/avatar"
        android:textStyle="bold"
        tools:text="小加勒比海盗"
        style="@style/Widget.App.TextView.Medium.Primary"
        />

    <TextView
        android:id="@+id/benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/report_rank_color_primary"
        tools:text="￥100.00"
        style="@style/Widget.App.TextView.Large"
        />

  </RelativeLayout>

</RelativeLayout>