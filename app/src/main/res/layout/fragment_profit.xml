<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profit_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_fragment_profit">

    <RelativeLayout
        android:id="@+id/rl_bibi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_share_moments">

        <LinearLayout
            android:id="@+id/profit_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_fragment_profit_header"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/profit_today_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="23.5dp"
                    android:background="@mipmap/bg_profit_today_income"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Widget.App.TextView.Medium.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:includeFontPadding="false"
                        android:text="@string/fragment_profit_profit_label_today" />

                    <TextView
                        android:id="@+id/today_income"
                        style="@style/Widget.App.TextView.XLarge.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/font_color_brown"
                        tools:text="121元" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="47.5dp"
                    android:layout_toLeftOf="@id/profit_today_container"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adv_view_count"
                        style="@style/Widget.App.TextView.Medium.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/fragment_profit_view_count" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/bg_color_divider" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:text="@string/fragment_profit_label_view_time"
                            android:textColor="@color/bg_color_divider"
                            android:textSize="@dimen/font_size_medium" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/bg_color_divider" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/view_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/font_color_brown"
                        android:textSize="@dimen/font_size_medium"
                        tools:text="5时25分" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="47.5dp"
                    android:layout_toRightOf="@id/profit_today_container"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adv_be_friend_rank"
                        style="@style/Widget.App.TextView.Medium.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/fragment_profit_friend_rank" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/bg_color_divider" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:text="@string/fragment_profit_label_be_visited"
                            android:textColor="@color/bg_color_divider"
                            android:textSize="@dimen/font_size_medium" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/bg_color_divider" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/view_be_visited_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/font_color_brown"
                        android:textSize="@dimen/font_size_medium"
                        tools:text="@string/fragment_profit_be_visited_count" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="68dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/profit_beyond"
                    style="@style/Widget.App.TextView.Large.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="@string/fragment_profit_beyond" />

                <ImageView
                    android:id="@+id/beyond_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profit_beyond"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:background="@mipmap/bg_profit_profit_beyond_line_first" />

                <TextView
                    android:id="@+id/profit_beyond_description"
                    style="@style/Widget.App.TextView.Large.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/beyond_divider"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="@string/fragment_profit_description_beyond" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/profit_beyond_description"
                    android:layout_below="@id/profit_beyond_description"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:background="@mipmap/bg_profit_profit_beyond_line_second" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_profit_fragment_beyond_left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_profit_fragment_beyond_right" />

            </RelativeLayout>

            <TextView
                android:id="@+id/cheered"
                style="@style/Widget.App.TextView.Large.RedDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:text="@string/fragment_profit_cheered" />

        </LinearLayout>

        <com.hengrtec.taobei.ui.basic.widget.BarChartView
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/profit_info_container"
            android:layout_margin="7dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/info"
        style="@style/Widget.App.TextView.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="@string/fragment_profit_bottom_info" />

    <FrameLayout
        android:id="@+id/btn_share_moments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/info"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_btn_profit_share_surround">

        <TextView
            style="@style/Widget.App.TextView.Medium.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_profit_share"
            android:gravity="center"
            android:text="@string/fragment_profit_btn_share_moments" />

        <ImageView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/lv_zxing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bibi_bg_share"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_zxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

</RelativeLayout>
