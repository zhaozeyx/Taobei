<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="6dp"
      android:paddingLeft="6dp"
      >
    <TextView
        android:id="@+id/data_display_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="16dp"
        tools:text="账户总收益"
        style="@style/Widget.App.TextView.XXLarge.Primary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_activity_profit_detail"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="20dp"
          android:paddingTop="20dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/activity_profit_detail_text_label_red_bag"
            style="@style/Widget.App.TextView.Medium.Primary"
            />

        <TextView
            android:id="@+id/red_bag_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:text="￥100"
            style="@style/Widget.App.TextView.Medium.Primary"
            />

      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/bg_color_divider"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="20dp"
          android:paddingTop="20dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/activity_profit_detail_text_label_login_reward"
            style="@style/Widget.App.TextView.Medium.Primary"
            />

        <TextView
            android:id="@+id/login_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:text="13枚"
            style="@style/Widget.App.TextView.Medium.Primary"
            />

      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/bg_color_divider"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="20dp"
          android:paddingTop="20dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/activity_profit_detail_text_label_task_reward"
            style="@style/Widget.App.TextView.Medium.Primary"
            />

        <TextView
            android:id="@+id/task_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:text="13枚"
            style="@style/Widget.App.TextView.Medium.Primary"
            />

      </RelativeLayout>

    </LinearLayout>

  </LinearLayout>

  <FrameLayout
      android:id="@+id/btn_withdraw"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:background="@color/font_color_yellow"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/icon_withdraw"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/activity_profit_detail_text_btn_withdraw"
        style="@style/Widget.App.TextView.Large.Primary"
        />
  </FrameLayout>
</FrameLayout>