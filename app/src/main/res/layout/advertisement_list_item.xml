<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:id="@+id/adv_snapshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/adv_snapshot"
        android:layout_alignLeft="@id/adv_snapshot"
        android:layout_alignRight="@id/adv_snapshot"
        android:layout_alignTop="@id/adv_snapshot"
        android:scaleType="fitXY"
        android:src="@drawable/bg_adv_list_item_cover"
        />

    <TextView
        android:id="@+id/adv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@android:color/white"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:scaleType="centerCrop"
          android:src="@mipmap/bg_adv_list_item_info"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="16dp"
          android:gravity="center"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/adv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_medium"
            tools:text="精益求精"
            style="@style/Widget.App.TextView"
            />

        <TextView
            android:id="@+id/adv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_medium"
            tools:text="永远领先-奔驰4S店全新上市"
            style="@style/Widget.App.TextView"
            />
        <TextView
            android:id="@+id/adv_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_adv_list_item_profit"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_medium"
            tools:text="即赚1-5元"
            style="@style/Widget.App.TextView"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_adv_list_play"
            />
      </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/un_launch_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/adv_snapshot"
        android:alpha="0.7"
        android:background="@android:color/black"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/un_launch_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/margin_small"
          tools:text="@string/adv_item_un_launch_info"
          style="@style/Widget.App.TextView.Medium.White"
          />
    </LinearLayout>
  </RelativeLayout>

</android.support.v7.widget.CardView>