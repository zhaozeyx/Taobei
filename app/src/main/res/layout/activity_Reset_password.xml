<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="45dp"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/password_label"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:id="@+id/btn_password_visible_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_password_invisible"
        />
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_password_visible_set"
        android:layout_toRightOf="@id/password_label"
        android:background="@null"
        android:hint="@string/password_input_hint"
        android:inputType="textPassword"
        android:maxLength="@integer/max_password_length"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:textColorHint="@color/font_color_hint"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/password_input"
        android:background="@mipmap/bg_input"
        />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      >
    <TextView
        android:id="@+id/password_confirm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/password_confirm_label"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:id="@+id/btn_password_confirm_visible_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_password_invisible"
        />
    <EditText
        android:id="@+id/password_confirm_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_password_confirm_visible_set"
        android:layout_toRightOf="@id/password_confirm_label"
        android:background="@null"
        android:hint="@string/password_confirm_input_hint"
        android:inputType="textPassword"
        android:maxLength="@integer/max_password_length"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:textColorHint="@color/font_color_hint"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/password_confirm_input"
        android:background="@mipmap/bg_input"
        />
  </RelativeLayout>

  <Button
      android:id="@+id/btn_register_confirm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:background="@drawable/bg_btn_yellow_gray"
      android:enabled="false"
      android:text="@string/btn_password_confirm"
      android:textColor="@color/btn_yellow_gray_selector"
      style="@style/Widget.App.TextView.Large.Primary"
      />

</LinearLayout>