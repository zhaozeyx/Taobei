<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    >

  <Button
      android:id="@+id/title_bar_subtitle_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:background="@android:color/transparent"
      android:textColor="@color/font_color_white"
      android:textSize="@dimen/font_size_large"
      android:visibility="gone"
      tools:text="subTitle"
      tools:visibility="visible"
      />

  <ImageView
      android:id="@+id/title_bar_btn_left"
      android:layout_width="@dimen/title_bar_height"
      android:layout_height="@dimen/title_bar_height"
      android:layout_alignParentLeft="true"
      android:contentDescription="@null"
      android:scaleType="center"
      android:visibility="gone"
      tools:src="@drawable/ic_launcher"
      />

  <RelativeLayout
      android:id="@+id/user_avatar_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:visibility="gone"
      tools:visibility="visible"
      >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_avatar"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#959595"
        app:civ_border_width="1dp"
        />

    <ImageView
        android:id="@+id/status_new_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/user_avatar"
        android:layout_marginLeft="3dp"
        android:src="@mipmap/icon_dot_red"
        android:visibility="gone"
        tools:visibility="visible"
        />
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/title_bar_operation_layout"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/title_bar_height"
      android:layout_alignParentRight="true"
      android:gravity="right"
      android:orientation="horizontal"
      android:visibility="visible"
      tools:ignore="UseCompoundDrawables"
      tools:visibility="visible"
      >

    <TextView
        android:id="@+id/title_bar_btn_right_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:gravity="center"
        android:minWidth="@dimen/title_bar_height"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:visibility="gone"
        tools:text="Right"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/title_bar_btn_right_img"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:contentDescription="@null"
        android:scaleType="center"
        android:visibility="gone"
        tools:src="@drawable/ic_launcher"
        tools:visibility="visible"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/title_bar_text_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:ellipsize="end"
      android:singleLine="true"
      android:textSize="@dimen/font_size_xlarge"
      tools:text="@string/app_name"
      style="@style/Widget.App.TextView.Large.White"
      />

  <com.sevenheaven.segmentcontrol.SegmentControl
      android:id="@+id/tabs"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:visibility="gone"
      app:colors="@color/title_bar_tab_bg"
      app:cornerRadius="12dp"
      app:direction="horizon"
      app:horizonGap="8dp"
      app:textColorNormal="@color/title_bar_tab_text_normal"
      app:textColorSelected="@color/title_bar_tab_text_selected"
      app:verticalGap="8dp"
      tools:texts="tab1|tab2|tab3"
      tools:visibility="visible"
      />

</RelativeLayout>
