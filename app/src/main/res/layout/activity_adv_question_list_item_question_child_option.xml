<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_adv_question_option"
    android:paddingLeft="12dp"
    android:paddingRight="10dp"
    tools:selected="true"
    >
  <TextView
      android:id="@+id/question_option"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      android:paddingBottom="14dp"
      android:paddingTop="14dp"
      android:textColor="@color/font_color_blue_dark"
      tools:text="松下Viera3D"
      style="@style/Widget.App.TextView.Medium.Primary"
      >
  </TextView>
  <ImageView
      android:id="@+id/answer_states"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      tools:enabled="false"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignBottom="@id/question_option"
      android:background="@drawable/dotted_line_gray"
      />
</RelativeLayout>