<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/grid_5"
      android:padding="@dimen/grid_4"
      android:text="@string/activity_settings_account_no_activation"
      android:textColor="@color/font_color_primary"
      android:textSize="@dimen/font_size_xlarge"
      />


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="6dp"
      android:paddingRight="6dp"
      android:layout_marginLeft="30dp"
      android:layout_marginStart="30dp"
      android:layout_marginRight="@dimen/grid_4"
      android:layout_marginEnd="@dimen/grid_4"
      >
    <TextView
        android:id="@+id/country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="+86"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_btn_clear"
        />
    <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_clear"
        android:layout_toRightOf="@id/country_code"
        android:background="@null"
        android:inputType="phone"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:paddingLeft="@dimen/grid_2"
        android:maxLength="@integer/max_phone_length"
        android:paddingBottom="13dp"

        android:paddingTop="13dp"
        android:singleLine="true"
        android:textColorHint="@color/font_color_hint"
        android:hint="@string/activity_settings_account_phone_hint"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phone_input"
        android:background="@mipmap/bg_input"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/grid_4"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_marginLeft="30dp"
      android:layout_marginStart="30dp"
      android:layout_marginRight="@dimen/grid_4"
      android:layout_marginEnd="@dimen/grid_4"
      >

    <TextView
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"

        android:text="@string/activity_settings_account_edit"
        android:textColor="@color/font_color_primary"
        android:textSize="@dimen/font_size_large"
        />

    <EditText
        android:id="@+id/et_num_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/num1"
        android:layout_toRightOf="@+id/num1"
        android:background="@drawable/shape"
        android:hint="@string/activity_settings_account_edit_hint"
        android:textColor="@color/font_color_light_gray"
        android:textSize="@dimen/font_size_large"
        />
    <TextView
        android:id="@+id/tv_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/grid_2"
        android:background="@drawable/shape_gray"
        android:text="@string/login_verify_code_input_hint"
        android:textColor="@color/font_color_blue"
        android:textSize="@dimen/font_size_large"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/et_num_input"
        android:background="@mipmap/bg_input"
        />
  </RelativeLayout>

  <TextView
      android:id="@+id/tv_activation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/grid_4"
      android:background="@color/font_color_space"
      android:gravity="center"
      android:padding="@dimen/grid_4"
      android:textSize="@dimen/font_size_xxlarge"
      android:text="@string/activity_settings_account_activation"
      />
</LinearLayout>
