<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <com.hengrtec.taobei.ui.basic.scrollview.InterceptScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          android:paddingBottom="20dp"
          >
        <RelativeLayout
            android:id="@+id/adv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            >
          <ImageView
              android:id="@+id/adv_snapshot"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="207dp"
              android:scaleType="centerCrop"
              />
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/adv_snapshot"
              android:layout_alignTop="@id/adv_snapshot"
              android:scaleType="fitXY"
              android:src="@mipmap/bg_adv_detail_cover"
              />
          <ViewStub
              android:id="@+id/no_play_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:layout="@layout/layout_adv_detail_info_no_play_time"
              />
          <ImageView
              android:id="@+id/layout_can_play"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:src="@mipmap/icon_adv_detail_play_normal"
              />

          <TextView
              android:id="@+id/play_count_info"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/adv_snapshot"
              android:background="@mipmap/bg_play_count"
              android:paddingBottom="5dp"
              android:paddingLeft="11dp"
              android:paddingTop="7.5dp"
              android:textColor="@android:color/white"
              android:textSize="@dimen/font_size_large"
              tools:text="@string/adv_detail_play_number_info"
              />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:visibility="visible"
            >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@mipmap/bg_adv_detail_info"
              />
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="5dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <TextView
                android:id="@+id/adv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/font_color_primary"
                android:textSize="17.5sp"
                tools:text="松下viera3D平板电视"
                />

            <TextView
                android:id="@+id/adv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/font_color_light_gray"
                android:textSize="17.5sp"
                tools:text="你！给我滚回去"
                />

            <TextView
                android:id="@+id/adv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_adv_detail_profit"
                android:textColor="@color/font_color_primary"
                android:textSize="16sp"
                tools:text="即赚1-5元"
                />
          </LinearLayout>
        </FrameLayout>

        <com.hengrtec.taobei.ui.home.view.DetailProfitInfoView
            android:id="@+id/detail_profit_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></com.hengrtec.taobei.ui.home.view.DetailProfitInfoView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/adv_detail_info_share"
            style="@style/Widget.App.TextView.Medium.Primary"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/btn_share_moments"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
              android:background="@drawable/bg_share_moments"
              android:drawableLeft="@mipmap/icon_share_moments"
              android:drawablePadding="4dp"
              android:gravity="center"
              android:text="@string/adv_detail_btn_share_moments"
              android:textColor="@color/font_color_dark_gray"
              style="@style/Widget.App.TextView.Medium"
              />

          <TextView
              android:id="@+id/btn_share_friends"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_share_friends"
              android:drawableLeft="@mipmap/icon_share_friends"
              android:drawablePadding="4dp"
              android:gravity="center"
              android:text="@string/adv_detail_btn_share_friends"
              android:textColor="@color/font_color_dark_gray"
              style="@style/Widget.App.TextView.Medium"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_white_corner_frame"
            android:orientation="vertical"
            android:paddingBottom="19dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            tools:visibility="gone"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="17dp"
              android:drawableLeft="@mipmap/icon_adv_detail_title"
              android:drawablePadding="10dp"
              android:text="@string/adv_detail_rule_title"
              style="@style/Widget.App.TextView.Large"
              />

          <TextView
              android:id="@+id/adv_rule"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:lineSpacingExtra="13dp"
              android:paddingLeft="13dp"
              android:textColor="@color/font_color_light_gray"
              tools:text="@string/adv_detail_rule"
              style="@style/Widget.App.TextView.Medium"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_corner_frame"
            android:orientation="vertical"
            android:paddingBottom="19dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            tools:visibility="gone"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="17dp"
              android:drawableLeft="@mipmap/icon_adv_detail_title"
              android:drawablePadding="10dp"
              android:text="@string/adv_detail_activity_title"
              style="@style/Widget.App.TextView.Large"
              />

          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/line_size"
              android:layout_marginLeft="@dimen/margin_medium"
              android:layout_marginRight="@dimen/margin_medium"
              android:background="@color/bg_color_divider"
              />

          <TextView
              android:id="@+id/activity_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/margin_small"
              android:lineSpacingExtra="13dp"
              android:paddingLeft="13dp"
              android:textColor="@color/font_color_light_gray"
              tools:text="春节可以享受八折优惠"
              style="@style/Widget.App.TextView.Medium"
              />

          <org.apmem.tools.layouts.FlowLayout
              android:id="@+id/tag_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="14dp"
              android:paddingLeft="@dimen/margin_medium"
              android:paddingRight="@dimen/margin_medium"
              android:visibility="gone"
              >
          </org.apmem.tools.layouts.FlowLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="7dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:background="@drawable/bg_comments_list_title"
              android:text="@string/adv_detail_comment_list_title"
              />

          <com.sevenheaven.segmentcontrol.SegmentControl
              android:id="@+id/order"
              android:layout_width="90dp"
              android:layout_height="25dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              app:colors="@color/font_color_dark_gray"
              app:cornerRadius="12dp"
              app:direction="horizon"
              app:horizonGap="8dp"
              app:textColorNormal="#d9dbdd"
              app:textColorSelected="#878787"
              app:verticalGap="8dp"
              tools:text="时间|热度"
              />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="29dp"
            />

        <TextView
            android:id="@+id/view_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/adv_detail_comments_load_more"
            style="@style/Widget.App.TextView.Medium.Red"
            />

      </LinearLayout>
    </com.hengrtec.taobei.ui.basic.scrollview.InterceptScrollView>

    <!--输入区域-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingBottom="9dp"
          android:paddingLeft="7dp"
          android:paddingRight="14dp"
          android:paddingTop="9dp"
          >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
          <android.support.v7.widget.AppCompatEditText
              android:id="@+id/edit_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:background="@null"
              android:drawableLeft="@mipmap/icon_edit"
              android:drawablePadding="5dp"
              android:paddingBottom="8dp"
              android:paddingLeft="8dp"
              android:paddingTop="8dp"
              android:visibility="gone"
              />
          <TextView
              android:id="@+id/edit_disable_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:drawableLeft="@mipmap/icon_edit"
              android:drawablePadding="10dp"
              android:hint="@string/adv_detail_input_info_text"
              android:paddingBottom="10dp"
              android:paddingLeft="8dp"
              android:paddingTop="10dp"
              />
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/edit_disable_text"
              android:background="@mipmap/bg_input"
              />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/comment_operation_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            >
          <ImageView
              android:id="@+id/btn_praise"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:padding="3dp"
              android:src="@drawable/icon_praise"
              />

          <ImageView
              android:id="@+id/btn_collect"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:padding="3dp"
              android:src="@drawable/icon_collect"
              />

          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
            <ImageView
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@drawable/icon_comment"
                />
            <ImageView
                android:id="@+id/icon_new_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/btn_comment"
                android:src="@mipmap/icon_dot_red"
                android:visibility="gone"
                tools:visibility="visible"
                />
          </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/adv_detail_btn_send"
            android:visibility="gone"
            style="@style/Widget.App.TextView.Medium.Secondary"
            />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/line_size"
          android:background="#dcdcdc"
          />
    </RelativeLayout>
  </RelativeLayout>
</FrameLayout>