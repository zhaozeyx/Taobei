<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/margin_primary"
    >

  <TextView
      android:id="@+id/message_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="通知标题"
      style="@style/Widget.App.TextView.Large.Primary"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_primary"
      android:layout_marginTop="@dimen/margin_primary"
      >
    <TextView
        android:id="@+id/message_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/icon_message_title"
        android:drawablePadding="@dimen/margin_small"
        android:gravity="center"
        tools:text="消息类型"
        style="@style/Widget.App.TextView.Medium.Primary"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="2016-05-23"
        style="@style/Widget.App.TextView.Medium.Primary"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="@dimen/margin_medium"
      android:layout_marginRight="@dimen/margin_medium"
      android:background="@color/bg_color_divider"
      />

  <TextView
      android:id="@+id/content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_medium"
      tools:text="我就是我我问我我然后我if萨克离婚卡积分过后就卡死的好看就暗示的划分空间撒回家 时发生的客户方会计师的合法进口商的是打飞机上打开了房间了深刻点击付款了死定了快速离开飞机上打开了几分 "
      style="@style/Widget.App.TextView.Medium.Primary"
      />


</LinearLayout>