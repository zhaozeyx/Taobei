          style="@style/Widget.App.TextView.Medium.Primary"
          />

      <TextView
          android:id="@+id/gender_value"
          tools:text="@string/activity_profile_detail_value_not_set"
          style="@style/Widget.App.TextView.Small.Secondary.ProfileDetailArrow"
          />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="19dp"
        android:background="@color/bg_color_divider"
        />

    <RelativeLayout
        android:id="@+id/age_setting"
