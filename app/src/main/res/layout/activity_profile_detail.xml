    <RelativeLayout
        android:id="@+id/account_bind_setting"
        style="@style/ProfileMenuContainer.Detail"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
